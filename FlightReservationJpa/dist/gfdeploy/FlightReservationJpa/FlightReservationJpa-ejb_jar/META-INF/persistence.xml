<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="FlightReservationJpa-ejbPU" transaction-type="JTA">
    <jta-data-source>FlightResJpa</jta-data-source>
    <class>entity.Account</class>
    <class>entity.Aircraft</class>
    <class>entity.Airport</class>
    <class>entity.Cabin</class>
    <class>entity.Customer</class>
    <class>entity.Employee</class>
    <class>entity.Flight</class>
    <class>entity.FlightRoute</class>
    <class>entity.ReservationDetails</class>
    <class>entity.Seat</class>
    <class>entity.Fare</class>
    <class>entity.FlightSchedule</class>
    <class>entity.FlightSchedulePlan</class>
    <class>entity.AircraftConfiguration</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
